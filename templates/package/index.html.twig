{% extends 'base.html.twig' %}

{% block title %}Package index{% endblock %}

{% block body %}
    <h1>Package index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vendor</th>
                <th>Public</th>
                <th>Name</th>
                <th>Version</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for package in packages %}
            <tr {{ package.public ? '' : 'class="table-danger"' }}>
                <td>{{ package.id }}</td>
                <td>{{ package.vendor }}</td>
                <td>{{ package.public ? 'Yes' : 'No' }}</td>
                <td>{{ package.name }}</td>
                <td>{{ package.version }}</td>
                <td>{{ package.category }}</td>
                <td>
                    <div class="form-check-inline">
                        <a class="btn btn-primary mr-2" href="{{ path('package_show', {'id': package.id}) }}"><i class="fas fa-eye"></i> Show</a>
                        {% if app.user %}
                            {% if package.owner == app.user.id %}
                                {% if is_granted('ROLE_USER') %}
                                    <a class="btn btn-primary mr-2" href="{{ path('package_edit', {'id': package.id}) }}"><i class="fas fa-pencil-alt"></i> Edit</a>
                                    {{ include('package/_delete_form.html.twig') }}
                                {% endif %}
                            {% else  %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="btn btn-primary mr-2" href="{{ path('package_edit', {'id': package.id}) }}"><i class="fas fa-pencil-alt"></i> Edit</a>
                                    {{ include('package/_delete_form.html.twig') }}
                                {% endif  %}
                            {% endif  %}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_USER') %}
        <a class="btn btn-primary" href="{{ path('package_new') }}"><i class="fas fa-plus"></i> Create new</a>
    {% endif %}
{% endblock %}
