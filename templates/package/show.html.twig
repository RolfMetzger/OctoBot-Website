{% extends 'base.html.twig' %}

{% block title %}Package{% endblock %}

{% block body %}
    <h1>Package</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ package.id }}</td>
            </tr>
            <tr>
                <th>Vendor</th>
                <td>{{ package.vendor }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ package.name }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ package.Version }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ package.description }}</td>
            </tr>
            <tr>
                <th>Repository</th>
                <td>{{ package.repository }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ package.createdAt ? package.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ package.updatedAt ? package.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('package_index') }}">back to list</a>

    <a href="{{ path('package_edit', {'id': package.id}) }}">edit</a>

    {{ include('package/_delete_form.html.twig') }}
{% endblock %}