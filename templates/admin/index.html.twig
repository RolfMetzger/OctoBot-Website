{% extends 'base.html.twig' %}

{% block title %}{{ app_name }} - {{ app_version }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <h1>Control panel</h1>

    Choose an item below :
    <ul>
        {% if is_granted('ROLE_USER') %}
            <li><a href="{{ path('package_index') }}">Packages</a></li>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('package_category_index') }}">Package categories</a></li>
        {% endif %}
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <li><a href="{{ path('user_index') }}">Users</a></li>
        {% endif %}
    </ul>
</div>
{% endblock %}
