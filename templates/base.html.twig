<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}'OctoBot'{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

    </head>
    <body>

        <ul>
            {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('package_index') }}">Packages</a></li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('package_category_index') }}">Package categories</a></li>
            {% endif %}
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li><a href="{{ path('user_index') }}">Users</a></li>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('logout') }}">Logout</a></li>
            {% endif %}
        </ul>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

    </body>
</html>
