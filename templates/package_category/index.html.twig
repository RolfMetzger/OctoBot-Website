{% extends 'base.html.twig' %}

{% block title %}PackageCategory index{% endblock %}

{% block body %}
    <h1>package categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Package Category Parent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for package_category in package_categories %}
            <tr>
                <td>{{ package_category.id }}</td>
                <td>{{ package_category.shortname }}</td>
                <td>{{ package_category.parent }}</td>
                <td>
                    <div class="form-check-inline">
                        <a class="btn btn-primary mr-2" href="{{ path('package_category_show', {'id': package_category.id}) }}"><i class="fas fa-eye"></i> Show</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-primary mr-2" href="{{ path('package_category_edit', {'id': package_category.id}) }}"><i class="fas fa-pencil-alt"></i> Edit</a>
                            {{ include('package_category/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('package_category_new') }}"><i class="fas fa-plus"></i> Create new</a>
    {% endif %}
{% endblock %}
