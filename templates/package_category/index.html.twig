{% extends 'base.html.twig' %}

{% block title %}PackageCategory index{% endblock %}

{% block body %}
    <h1>Package Types index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for package_category in package_categories %}
            <tr>
                <td>{{ package_category.id }}</td>
                <td>{{ package_category.shortname }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('package_category_show', {'id': package_category.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('package_category_edit', {'id': package_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('package_category_new') }}">Create new</a>
{% endblock %}
