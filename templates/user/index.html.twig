{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>IsActive</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>
                    <div class="form-check-inline">
                        <a class="btn btn-primary mr-2" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i> Show</a>
                        <a class="btn btn-primary mr-2" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-pencil-alt"></i> Edit</a>
                        {% if 'ROLE_SUPER_ADMIN' not in user.roles %}
                            {{ include('user/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('user_new') }}"><i class="fas fa-plus"></i> Create new</a>
{% endblock %}
